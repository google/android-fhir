<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#10156125"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fab_margin"
        tools:ignore="UselessParent"
    >

    <TextView
            android:id="@+id/title"
            style="@style/AppTheme.PatientDetails.headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mary Odhiambo"
        />

    <TextView
            android:id="@+id/status"
            style="@style/AppTheme.PatientDetails.body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/html_text"
        />
    <TextView
            android:id="@+id/last_contact"
            style="@style/AppTheme.PatientDetails.body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Last Contacted: none"
        />

    <com.google.android.material.button.MaterialButton
            android:paddingStart="2dp"
            android:drawableStart="@drawable/ic_baseline_add_24"
            android:drawablePadding="2dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_margin="5dp"
            android:text="@string/complete_survey"
            android:id="@+id/screener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />
</LinearLayout>
</FrameLayout>
