          "url": "libraryName",
          "valueString": "OpioidCDSREC10Common"
        },
        {
          "url": "name",
          "valueString": "Indicator"
        },
        {
          "url": "statement",
          "valueString": "define \"Indicator\":\n  'warning'"
        },
