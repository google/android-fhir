<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_modal_card">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_quarter_size"
            tools:text="What type of head pain?" />

        <TextView
            android:id="@+id/dialog_subtitle"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multi_select_dialog_subtitle"
            android:textColor="@color/grey_700"
            android:visibility="gone"
            tools:text="Select all that apply" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_default"
            android:layout_weight="1"
            tools:listitem="@layout/questionnaire_item_option_item_multi"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/negative_button"
                style="@style/Questionnaire.Widget.MaterialComponents.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half_size"
                android:text="@android:string/cancel" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/positive_button"
                style="@style/Questionnaire.Widget.MaterialComponents.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half_size"
                android:text="@string/save" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

